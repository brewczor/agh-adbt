 Total runtime: 28.578 ms
(3 rows)

-- nałożenie indeksu:

CREATE INDEX idx_xml_printer_asc ON printer USING btree (
  (
    (xpath('//printer/mechanism/resolution/dpi/x/text()', description))
    [1]::text::integer
  )
);

SET ENABLE_SEQSCAN TO OFF;
